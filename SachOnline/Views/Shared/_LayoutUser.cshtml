<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @*
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>*@



    <style type="text/css">
        .imgbook {
            transition: all 1s ease-in;
            width: 400px;
        }

            .imgbook:hover {
                transform: scale(0.9);
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }
    </style>

    <style>
        /* CSS inline cho header */
        header {
            background-color: #333;
            color: #fff;
            padding: 5px;
            text-align: center;
        }

        h1 {
            font-size: 36px;
        }

        nav li {
            display: inline; /* Hiển thị các mục menu trên cùng một hàng */
            margin-right: 20px; /* Khoảng cách giữa các mục menu */
            color: white;
        }

        nav a {
            text-decoration: none;
            color: #fff; /* Đổi màu chữ trong menu thành trắng */
            font-weight: bold;
        }

        /* Định dạng ô tìm kiếm */
        .search-box {
            display: inline-block;
            margin-left: 20px; /* Khoảng cách giữa ô tìm và menu */
        }

            .search-box input[type="text"] {
                padding: 5px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .search-box button {
                padding: 5px 10px;
                background-color: #fff;
                color: #333;
                border: none;
                border-radius: 5px;
            }

        long-image {
            width: 300px;
            max-height: 50px; /* Điều chỉnh độ cao tối đa của hình ảnh */
            margin-top: 20px; /* Khoảng cách giữa header và hình ảnh */
        }
    </style>

</head>
<body>
    <header>

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">Người dùng<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("Dangky","User")"><span class="glyphicon glyphicon-user"></span> Đăng ký</a> </li>
                    <li role="separator" class="divider"></li>
                    <li><a href="@Url.Action("Dangnhap","User")"><span class="glyphicon glyphicon-log-in"></span> Đăng nhập</a></li>
                </ul>
            </li>
            <li><a href="@Url.Action("GioHang", "GioHang")"><span class="glyphicon glyphicon-shopping-cart"></span> Giỏ hàng (@ViewBag.TongSoLuong)</a> </li>
        </ul>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "SachOnline")">SachOnline</a></li>
                <li><a href="@Url.Action("Index", "SachOnline")">TRANG CHỦ</a></li>
                <li><a href="#">GIỚI THIỆU</a></li>
                <li><a href="#">LIÊN HỆ</a></li>
                <li><a href="#">SÁCH THEO CHỦ ĐỀ</a></li>
                <li><a href="#">SÁCH THEO NHÀ XUẤT BẢN</a></li>
                <li class="search-box">
                    <input type="text" id="bookName" name="bookName" placeholder="Tìm kiếm">
                    <button type="submit">Tìm</button>
                </li>
                @* <li><a href="@Url.Action("GioHang", "GioHang")"><img src="~/Images/giohang.png" />Giỏ hàng   @ViewBag.TongSoLuong </a></li>*@

            </ul>



        </nav>

    </header>
    <div class="container">

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div id="carousel1" class="carousel slide">
                    <ol class="carousel-indicators">
                        <li data-target="#carousel1" data-slide-to="0" class="active"> </li>
                        <li data-target="#carousel1" data-slide-to="1" class=""> </li>
                        <li data-target="#carousel1" data-slide-to="2" class=""> </li>
                        <li data-target="#carousel1" data-slide-to="3" class=""> </li>


                    </ol>
                    <div class="carousel-inner">
                        <div class="item active">
                            <img class="img-responsive" src="~/Images/anhbia1.png" alt="thumb">

                            <div class="carousel-caption"> Quảng cáo 1 </div>
                        </div>
                        <div class="item">
                            <img class="img-responsive" src="~/Images/anhbia2.png" alt="thumb">
                            <div class="carousel-caption"> Quảng cáo 2 </div>
                        </div>
                        <div class="item">
                            <img class="img-responsive" src="~/Images/anhbia3.png" alt="thumb">
                            <div class="carousel-caption"> Quảng cáo 2 </div>
                        </div>
                        <div class="item">
                            <img class="img-responsive" src="~/Images/anhbia4.png" alt="thumb">
                            <div class="carousel-caption"> Quảng cáo 2 </div>
                        </div>

                    </div>
                    <a class="left carousel-control" href="#carousel1" data-slide="prev"><span class="icon-prev"></span></a>
                    <a class="right carousel-control" href="#carousel1" data-slide="next"><span class="icon-next"></span></a>
                </div>

            </div>

        </div>
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @Html.Action("ChuDePartial", "SachOnline")
                @Html.Action("_NhaXuatBanPartial", "SachOnline")
            </div>

            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @RenderBody()
            </div>
        </div>
        <div class="container">
            @*@section SachBanNhieuPartial{*@ @Html.Action("SachBanNhieuPartial", "SachOnline")

        </div>

        </div>

</body>
</html>
