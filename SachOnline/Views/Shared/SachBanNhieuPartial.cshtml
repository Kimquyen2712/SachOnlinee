<h3 class="text-center">SÁCH BÁN NHIỀU</h3>
<div class="container">
    <!-- Đặt vào một container để giới hạn chiều rộng -->
    <div class="row">
        @foreach (var sach in Model)
        {
            <div class="col-lg-6 col-md-6">
                <div class="media-object-default">
                    <div class="media">
                        <div class="media-left">
                            <a href="#">
                                <img class="media-object imgsachbannhieu" src="~/Images/@sach.Images" alt="placeholder image">
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">@sach.Title</h4>
                            <p class="description-limit">@sach.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> <!-- container -->
